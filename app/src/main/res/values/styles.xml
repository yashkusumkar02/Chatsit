        <item name="texttwocolor">#5B5B5E</item>
        <item name="textcolor">#040404</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">#fff</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <!-- Normal Night application theme. -->
    <style name="NormalDarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#212121</item>
